// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(cuid())
  title       String
  type        String
  description String
  filename    String
  height      Int
  width       Int
  price       Float
  rating      Float
}
